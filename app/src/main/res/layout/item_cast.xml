<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.moviereview.ui.models.UICast" />

        <variable
            name="clickListener"
            type="com.example.moviereview.ui.adapters.GenericRvAdapter.GenericItemListener" />

    </data>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/itemCastImageCv"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="@dimen/margin_default"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/poster_placeholder"
                app:posterImage="@{item.profilePath}" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemPosterImageCv"
            app:text="@{item.name}"
            tools:text="Rick and Morty" />

    </LinearLayout>
</layout>